<style>
  #newReportForm {
    padding: 20px;
  }

  #groupNewReport {
    width: 430px;
    margin: auto;
    background-color: aliceblue;
    padding: 15px;
    border-radius: 10px;
    font-size: 0.9em;
    line-height: 1.8em;
  }

  #groupNewReport h5 {
    font-size: 1.2em;
    margin-bottom: 20px;
    font-weight: bold;
    text-align: center;
  }

  @media (max-width: 600px) {
    #groupNewReport {
      width: 100%;
      font-size: 1.6em;
      line-height: 3em;
    }

    .input-group input {
      height: 3em;
    }

    #workTimePeriod input {
      padding: 2px;
    }
  }

  .input-group {
    display: flex;
    justify-content: space-between;
  }

  .input-group label {
  }

  .input-group input {
    width: 65% !important;
  }

  #workInProvider {
    justify-content: start;
  }

  #workInProvider label {
  }

  #workInProvider input {
    width: 10% !important;
    margin-left: 10px;
  }

  #groupInputProvider {
  }

  #groupInputSotrudnik input {
  }

  #groupInputData input {
  }

  label.shortTerm {
    width: 6%;
    margin-right: 5px;
  }

  #workTimePeriod label {
  }

  #workTimePeriod input {
    width: 18% !important;
  }

  #groupIntputQuantity input {
    width: 20% !important;
  }

  .termoobrabotkaProvider {
  }

  .obrabotkaProviderPrice input {
    width: 30% !important;
  }
</style>

<div id="newReportForm">
  <div id="groupNewReport">
    <h5>Создание отчета</h5>

    <div class="input-group mb-2" id="workInProvider">
      <label for="date" class="labelNewReport">Сделано у подрядчика :</label>
      <input class="" type="checkbox" value="" id="workInProviderInput" />
    </div>

    <div class="input-group mb-2" id="groupInputProvider" style="display: none">
      <label for="provider" class="labelNewReport">Подрядчик :</label>
      <input
        type="text"
        class="form-control inputFixBrak"
        id="provider"
        url="/app/autocompleteProvider"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2" id="groupInputSotrudnik">
      <label for="sotrudnik" class="labelNewReport">Сотрудник :</label>
      <input
        type="text"
        class="form-control inputFixBrak"
        id="sotrudnik"
        url="/app/autocompleteSotrydnik"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2" id="groupInputData">
      <label for="date" class="labelNewReport">Дата :</label>
      <input
        type="date"
        class="form-control inputFixBrak"
        id="date"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2" id="workTimePeriod">
      <label for="time" class="labelNewReport">Время работы</label>
      <label for="time" class="labelNewReport textAlignEnd shortTerm">с:</label>
      <input
        type="text"
        class="form-control inputFixBrak textAlignCenter"
        inputmode="numeric"
        limitHourse="23"
        data-mask="B9:A9"
        id="timeStart"
        placeholder="чч:мм"
        aria-describedby="basic-addon3"
      />
      <label for="time" class="labelNewReport textAlignEnd shortTerm"
        >по:</label
      >
      <input
        type="text"
        class="form-control inputFixBrak textAlignCenter"
        inputmode="numeric"
        limitHourse="23"
        data-mask="B9:A9"
        id="timeStop"
        placeholder="чч:мм"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2" id="groupIntputQuantity">
      <label for="time" class="labelNewReport"
        >Количество изготовлено, шт:</label
      >
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="count"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2 termoobrabotkaProvider termoobrabotka">
      <label for="time" class="labelNewReport" style="width: 280px"
        >Вес одной детали, кг:</label
      >
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="weight"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2 termoobrabotkaProvider termoobrabotka">
      <label for="time" class="labelNewReport" style="width: 280px"
        >Цена обработки 1кг, грн:</label
      >
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="price"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group mb-2 obrabotkaProviderPrice termoobrabotka">
      <label for="time" class="labelNewReport">Цена обработки 1шт, грн:</label>
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="priceForOne"
        aria-describedby="basic-addon3"
      />
    </div>

    <div style="display: flex; margin-top: 20px">
      <button type="button" class="btn btn-success" id="saveNewReport">
        Сохранить
      </button>
      <button type="button" class="btn btn-secondary" id="cancelNewReport">
        Отмена
      </button>
    </div>
  </div>
</div>
