<style>
  #groupNewReport h5 {
    font-size: 1.2em;
    margin-bottom: 20px;
    font-weight: bold;
    text-align: center;
  }

  @media (max-width: 600px) {
    #workTimePeriod input {
      padding: 2px;
    }
  }

  .input-group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap;
    gap: 10px;
    margin-bottom: 0.7em;
  }

  #groupNewReport label {
    font-size: 1em;
    margin-bottom: 0;
  }

  #groupNewReport input {
    flex-grow: 0;
    height: 2.5em;
    font-size: 1em;
    border-radius: 0.25rem;
  }

  #workInProvider {
    justify-content: start;
  }

  #workInProvider input {
    width: 1.5em;
    height: 1.5em;
    flex-grow: initial;
  }

  #groupInputProvider label,
  #groupInputSotrudnik label,
  #groupInputData label,
  #workTimePeriod label,
  #buttonsGroup label {
    width: 32%;
  }

  #groupIntputQuantity label,
  .termoobrabotka label {
    width: 70%;
  }

  @media (max-width: 600px) {
    #groupInputProvider label,
    #groupInputSotrudnik label,
    #groupInputData label,
    #workTimePeriod label,
    #buttonsGroup label {
      width: 42%;
    }

    #groupIntputQuantity label,
    .termoobrabotka label {
      width: 75%;
    }
  }

  #groupInputProvider input {
    flex-grow: 1;
  }

  #groupInputSotrudnik input {
    flex-grow: 1;
  }

  #groupInputData {
    justify-content: flex-start;
  }

  #groupInputData input {
    width: 8em;
    flex-grow: 1;
    text-align: center;
  }

  .shortTerm {
    width: 2em;
    margin-right: 5px;
  }

  #workTimePeriod div {
    display: flex;
    justify-content: space-between;
    flex-wrap: nowrap;
    align-items: center;
  }
  #workTimePeriod {
    justify-content: flex-start;
  }

  #workTimePeriod label {
  }

  #workTimePeriod input {
    flex-grow: 1 !important;
  }

  #groupIntputQuantity input {
    flex-grow: 1;
  }

  .obrabotkaProviderPrice input {
    flex-grow: 1 !important;
  }

  .newReportButton {
    font-size: 1em;
    width: 7em;
  }
</style>

<div id="newReportForm">
  <div id="groupNewReport" class="reportContainer">
    <h5>Создание отчета</h5>

    <div class="input-group" id="workInProvider">
      <label for="date" class="labelNewReport">Сделано у подрядчика :</label>
      <input class="" type="checkbox" value="" id="workInProviderInput" />
    </div>

    <div class="input-group" id="groupInputProvider" style="display: none">
      <label for="provider" class="labelNewReport">Подрядчик :</label>
      <input
        type="text"
        class="form-control inputFixBrak"
        id="provider"
        url="/app/autocompleteProvider"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group" id="groupInputSotrudnik">
      <label for="sotrudnik" class="labelNewReport">Сотрудник :</label>
      <input
        type="text"
        class="form-control inputFixBrak"
        id="sotrudnik"
        url="/app/autocompleteSotrydnik"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group" id="groupInputData">
      <label for="date" class="labelNewReport">Дата :</label>
      <input
        type="date"
        class="form-control inputFixBrak"
        id="date"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group" id="workTimePeriod">
      <label for="time" class="labelNewReport">Время работы с:</label>
      <!-- <label for="time" class="labelNewReport textAlignEnd shortTerm">с:</label> -->
      <div>
        <input
          type="text"
          class="form-control inputFixBrak textAlignCenter"
          inputmode="numeric"
          limitHourse="23"
          data-mask="B9:A9"
          id="timeStart"
          placeholder="чч:мм"
          aria-describedby="basic-addon3"
        />
        <label for="time" class="labelNewReport textAlignEnd shortTerm"
          >по:</label
        >
        <input
          type="text"
          class="form-control inputFixBrak textAlignCenter"
          inputmode="numeric"
          limitHourse="23"
          data-mask="B9:A9"
          id="timeStop"
          placeholder="чч:мм"
          aria-describedby="basic-addon3"
        />
      </div>
    </div>

    <div class="input-group" id="groupIntputQuantity">
      <label for="time" class="labelNewReport"
        >Количество изготовлено, шт:</label
      >
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="count"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group termoobrabotkaProvider termoobrabotka">
      <label for="time" class="labelNewReport">Вес одной детали, кг:</label>
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="weight"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group termoobrabotkaProvider termoobrabotka">
      <label for="time" class="labelNewReport">Цена обработки 1кг, грн:</label>
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="price"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group obrabotkaProviderPrice termoobrabotka">
      <label for="time" class="labelNewReport">Цена обработки 1шт, грн:</label>
      <input
        type="number"
        class="form-control inputFixBrak textAlignEnd"
        inputmode="numeric"
        id="priceForOne"
        aria-describedby="basic-addon3"
      />
    </div>

    <div class="input-group" id="buttonsGroup">
      <label></label>
      <button
        type="button"
        class="btn btn-success newReportButton"
        id="saveNewReport"
      >
        Сохранить
      </button>
      <button
        type="button"
        class="btn btn-secondary newReportButton"
        id="cancelNewReport"
      >
        Отмена
      </button>
    </div>
  </div>
</div>
