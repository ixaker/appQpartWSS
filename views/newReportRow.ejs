    #groupNewReport {
      font-size: 4vw;
    }
  }

  #workInProvider {
    justify-content: start;
  }

  #workInProvider input {
    width: 1.5em;
    height: 1.5em;
    flex-grow: initial;
    margin-top: 10px;
  }

  #workInProviderInput {
    margin-top: 5px;
    margin-left: 20px;
  }

  #groupInputProvider label,
  #groupInputSotrudnik label,
  #groupInputData label,
  #workTimePeriod label,
  #buttonsGroup label,
  #groupInputStanok label {
    width: 32%;
  }

  #groupIntputQuantity label,
  .termoobrabotka label,
  #groupMachineTime label,
  #groupFullTime label,
  #groupCountPerOne label {
    width: 70%;
  }




  @media (max-width: 600px) {
    /* #groupInputProvider label,
