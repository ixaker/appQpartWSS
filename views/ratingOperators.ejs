    </div>

  </td>
</script>

<script>
  $(document).ready(function () {
    const tableID = '#tableList';
    let options = { year: 'numeric', month: 'numeric', timezone: 'UTC' };
    let date = new Date();
    let allData = [];
    const pageUID = localStorage.getItem('PageUID');
    const userRights = $('#menu').data('userRight')[pageUID];
    let currentUser = {};

    if (testEnvironment) {
      date = new Date('2025-02-22');
    }

    console.log('userRights', userRights);

    $('#date').val(date.toLocaleString('ru', options));

    $('#btnDown').on('click', function (event) {
      clickAnimate(this);
      date.setMonth(date.getMonth() - 1);
      $('#date').val(date.toLocaleString('ru', options));
      getData();
    });

    $('#btnUp').on('click', function (event) {
      clickAnimate(this);
      date.setMonth(date.getMonth() + 1);
      console.log('date', date);
      $('#date').val(date.toLocaleString('ru', options));
      getData();
    });

    function getData() {
      console.log('getData date', date);
      universalRequest(
        '/app/ratingOperators',
        'GET',
        {},
        { date: date.toISOString() },
        function onSuccess(response) {
          console.log('Success callback', response);
          allData = response.list;
          generateFromTemplate('#row-template', allData, '#tableBody');
        },
        function onError(error) {
          console.log('Error callback:', error);
        },
        () => {}
      );
    }

    $(tableID).on('click', '.rowData', function () {
      const uid = $(this).attr('uid') || '';
      const currentUID = user.uid;
      console.log('userRights', userRights);
      if (!userRights.canViewDetailInfo) {
        if (uid !== currentUID) {
          return;
        }
      }

      console.log('uid', uid);
      const infoElement = $('#infoRow');
      const isInfoPresent = infoElement.length > 0;
      const oldUID = isInfoPresent ? infoElement.attr('uid') || '' : '';
      const needRender = !isInfoPresent || uid !== oldUID;
      console.log('needRender', needRender, infoElement, oldUID, uid);
      if (isInfoPresent) {
        infoElement.remove();
      }

      $('.rowData').removeClass('blur');

      if (needRender) {
        $('.rowData').addClass('blur');
        $(this).removeClass('blur');
        render(uid, this);
        console.log('needRender');
      }
    });

    function render(uid, targetRow) {
      console.log('render', this, uid);
      console.log('targetRow', targetRow);
      let newRow = $(`<tr id='infoRow'>row about user</tr>`);
      $(targetRow).after(newRow);
      $('#infoRow').attr('uid', uid);
      const data = {
        date: date.toISOString(),
        userUID: uid,
      };
      getUserInfo(data);
    }

    function getUserInfo(data) {
      console.log('data', data);
      universalRequest(
        '/app/ratingOperators',
        'POST',
        data,
        {},
        function onSuccess(response) {
          currentUser = response;
          console.log('Success callback', response);
          generateFromTemplate('#userInfo', response, '#infoRow');

          $('#accordion').accordion({
            collapsible: true,
            active: false,
            heightStyle: 'content',
            classes: {
              'ui-accordion': 'qpart-ui-accordion',
              'ui-accordion-header': 'qpart-ui-accordion-header',
              'ui-accordion-header-collapsed': 'qpart-ui-accordion-header-collapsed',
              'ui-accordion-header-active': 'qpart-ui-accordion-header-active',
              'ui-accordion-header-icon': 'qpart-ui-accordion-header-icon',
              'ui-accordion-content': 'qpart-ui-accordion-content',
              'ui-accordion-icons': 'qpart-ui-accordion-icons',
              'ui-accordion-content-active': 'qpart-ui-accordion-content-active',
            },
          });
          const currentUID = user.uid;
          const uid = response['ИнфоПоСотруднику'].uid;

          console.log('currentUID', currentUID, 'uid', uid);

          if (uid === currentUID) {
            $('#hideUserInfoBlock').hide();
            console.log('hideUserInfoBlock', $('#hideUserInfoBlock'));
          }
        },
        function onError(error) {
          console.log('Error callback:', error);
        },
        () => {}
      );
    }
    getData();
  });
</script>
