              <dd>{{#if ИнфоПоСотруднику.НеразглашениеКоммерчТайны}} есть {{else}} нет {{/if}}</dd>
            </dl>
            <dl>
              <dt>{{#if ИнфоПоСотруднику.НеМестный}} Не местный {{/if}}</dt>
              <dd></dd>
            </dl>

          </div>
        </div>
      </div>

    </div>
    <div class='orderContainer'>

      <div class='workDayInfoHeader'>
        <div class='when'>Дата</div>
        <div class='workhours'>Часы</div>
        <div class='employeshift'>Смена</div>
      </div>

      <div id='accordion'>
        {{#each ИнфоПоОтчетам}}
          <h3 class='work-day-row' data-date='{{Дата}}' data-shift='{{Смена}}' data-hours='{{Часы}}'>
            <div class='when'>{{Дата}}</div>
            <div class='workhours textAlignEnd'>{{Часы}}</div>
            <div class='employeshift textAlignCenter'>{{Смена}}</div>
          </h3>
          <div class=''>
            <div class='workDayInfoHeader'>
              <div class='mashin'>Станок</div>
              <div class='part'>Деталь</div>
              <div class='stage'>Этап</div>
              <div class='quantity'>К-во</div>
              <div class='mashinehors'>Часы</div>
            </div>
