    margin-right: 10px;
    text-align: center;
    font-size: x-large;
    height: 36px;
    margin-top: 5px;
    max-width: 140px;
    padding: 0;
    margin-left: 10px;
  }

  .btnArrow {
    font-size: xx-large;
  }

  #detail {
