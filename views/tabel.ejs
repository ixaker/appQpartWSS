<style>
  #content {
    padding: 10px 5px;
    max-width: 600px;
    margin: 0 auto;
  }

  #tableList {
    width: 100%;
    font-size: small;
    background-color: #ffffff;
  }

  th {
    background: #007431;
    color: white;
    padding: 0 5px 0 5px;
    border-color: black;
  }

  .kontragent {
    font-weight: bold;
    height: 20px;
    overflow-y: hidden;
    padding: 0 5px 2px 5px;
  }

  .groupSumm {
    display: flex;
    padding: 1px 5px;
    margin-left: 40px;
  }

  .debet {
    width: 30%;
    text-align: end;
    margin-left: auto;
    padding: 0 10px;
    border-right: 1px solid #000000;
  }

  .kredit {
    width: 30%;
    text-align: end;
    padding: 0 10px;
    border-right: 1px solid #000000;
  }

  .total {
    width: 30%;
  }

  .greenValue {
    color: #007431;
  }

  .redValue {
    color: red;
  }

  #commandRow {
    position: relative;
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
    gap: 10px;
  }
  #groupDate {
    display: flex;
  }

  #selectOrgContainer {
    display: flex;
    justify-content: center;
  }

  #selectOrg {
    font-size: x-large;
    margin-top: 5px;
    height: 36px;
    text-align: center;
  }

  #date {
